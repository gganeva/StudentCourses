@using StudentCourses.Web.Models.Home
@model HomeViewModel

@{
	ViewBag.Title = "Manage Courses";
}

<h1>@ViewBag.Title</h1>

<div class="row">
	<div class="col-md-4">
		<h3>Registered Courses</h3>
		<table cellpadding="5">
			<thead>
				<tr>
					<td width="150">Course</td>
					<td width="200">Description</td>
					<td width="150"></td>
				</tr>
			</thead>
			<tbody>
				@{
					foreach (var course in Model.RegisteredCourses)
					{
						<tr>
							<td>@course.Title</td>
							<td>@course.Description</td>
							<td>
								@Html.ActionLink("Edit", "EditCourse", new { id = course.Id })
								@Html.ActionLink("Unregister", "RemoveCourse", new { id = course.Id })
							</td>
						</tr>
					}
				}
			</tbody>
		</table>

	</div>
	<div class="col-md-4">
		<h3>All Courses</h3>
		<table cellpadding="5">
			<thead>
				<tr>
					<td width="150">Course</td>
					<td width="200">Description</td>
					<td width="200"></td>
				</tr>
			</thead>
			<tbody>
				@{
					foreach (var course in Model.AllCourses)
					{
						<tr>
							<td>@course.Title</td>
							<td>@course.Description</td>
							<td>
								@Html.ActionLink("Register", "RegisterCourse", new { id = course.Id },
							   new { onclick = "return DisplayConfirmationPopup('" + course.Title + "');" })
								@Html.ActionLink("Edit", "EditCourse", new { id = course.Id })
							</td>
						</tr>
					}
				}
			</tbody>
		</table>
	</div>
</div>

<script>
	function DisplayConfirmationPopup(courseTitle) {
		return confirm('Are you sure you wish to register for course "' + courseTitle + '"? ')
	}
</script>